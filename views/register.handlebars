{{> nav/nav-block user=false register=true}}

<div class="container">
  <div class="row">
    <div class="col col-md-12">
      <header class="create-user-wrap header-wrap" align="center">
        <h1>Sign In</h1>
        <h3 id="create-err-msg"></h3>
      </header>
       <form>
          <div class="form-group">
            <label for="inputAccount">Email</label>
            <input type="text" class="form-control" id="email">
          </div>
          <div class="form-group">
            <label for="inputAccount">Password</label>
            <input type="password" class="form-control" id="user_password">
          </div>
        </form>
        
        <h1>Create Your Account</h1>
        <h3 id="create-err-msg"></h3>
      </header>

      <h3 id="err-msg"></h3>

      <form id= "create-form">
        <div class="form-row">
          <div class="form-group col-md-12">
            <label for="inputFirst">First Name</label>
            <input type="text" class="form-control" id="inputFirst" placeholder="John">
          </div>
        </div>

        <div class="form-row">
          <div class="form-group col-md-12">
            <label for="inputLast">Last Name</label>
            <input type="text" class="form-control" id="inputLast" placeholder="Doe">
          </div>
        </div>

        <div class="form-row">
          <div class="form-group col-md-12">
            <label for="inputEmail">Email</label>
            <input type="email" class="form-control" id="inputEmail" placeholder="Email">
          </div>
        </div>

        <div class="form-row">
          <div class="form-group col-md-12">
            <label for="inputPassword">Password</label>
            <input type="password" class="form-control" id="inputPassword" placeholder="Password">
          </div>
        </div>
        <div class="form-row">
          <div class="form-group col-md-12">
            <label for="bookList">Enter your 5 favorite Books!</label>
            <ol>
              <li><input id="book1" type="text" placeholder="Favorite"></li>
              <li><input id="book2" type="text" placeholder="2nd favorite">></li>
              <li><input id="book3" type="text" placeholder="3rd Favorite">></li>
              <li><input id="book4" type="text" placeholder="Love but not Favorite">></li>
              <li><input id="book5" type="text" placeholder="Like but not Favorite">></li>
            </ol>
          </div>
        </div>
        <div>
          <h2 id="message"></h2>
        </div>

        <button type="submit" id="add-user" class="btn btn-primary">Submit</button>
      </form>
    </div>
  </div>
</div>